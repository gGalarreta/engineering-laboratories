<section class="requests-index">
  <div class="card">
    <div class="content">
      <div class="header card-header-text sical-card-header">
        <h1 class="sical-card-title">
          Proformas
        </h1>
      </div>
      <div class="sical-content">
        <div class="sub-section-cards">
          <div class="col-md-4 sub-section-card is-read-card">
            <%= render 'aplication/sub_section_card', elements: @funded_services, title: "Servicios Costeados", controller: "client_quotation" %>
          </div>
          <div class="col-md-4 sub-section-card is-read-card">
            <%= render 'aplication/sub_section_card', elements: @pending_services, title: "Servicios Pendientes", controller: "client_quotation" %>
          </div>
          <div class="col-md-4 sub-section-card is-read-card">
            <%= render 'aplication/sub_section_card', elements: @adjusted_services, title: "Servicios Ajustados", controller: "client_quotation" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
