<div class="card">
  <div class="content">
    <div class="header card-header-text sical-card-header">
      <h1 class="page-header title sical-card-title">Solicitud de Servicio <small>Ver</small></h1>
    </div>
    <div class="tab">
      <button class="tablinks active" onclick="openSection(event, 'basic_information')">Informaci√≥n</button>
      <% if @service.can_see_this_information(necessary_progress_state = "with_contract") %>
        <button class="tablinks" onclick="openSection(event, 'contracts')">Contrato</button>
      <% end %>
      <% if @service.can_see_this_information(necessary_progress_state = "completed") %>
        <button class="tablinks" onclick="openSection(event, 'results')">Resultados</button>
      <% end %>
    </div>

    <div id="basic_information" class="tabcontent " style="display: block;">
      <%= render "basic_information", service: @service%>
    </div>

    <div id="contracts" class="tabcontent">
      <%= render "contracts_information", service: @service%>
    </div>

    <div id="results" class="tabcontent">
      <%= render "results_information", service: @service%>
    </div>
  </div>
  <div class="form-group">
    <div class="text-center">
      <%= link_to "Regresar", client_services_path, class: "btn btn-primary sical-btn-cancel" %>
    </div>
  </div>
</div>
