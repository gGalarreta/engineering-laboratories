<%= form_for @client, url: path, method: method do |f| %>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :nombres %>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :apellidos %>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :last_name %>
    </div>
  </div>  
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :ruc%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :ruc %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :persona_de_contacto%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :contact_person %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%#= f.label :correo_electrónico%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%#= f.text_field :email, class: "form-control", email: true ,required:"required"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :teléfono%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-3 col-form-label">
      <%= f.label :dirección%>
    </div>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="sical-form-buttons">
    <div class="text-center">
      <%= link_to "Cancelar", clients_path  %>
      <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
    </div>
  </div>
<% end %>