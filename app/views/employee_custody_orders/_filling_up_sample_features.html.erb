<table id="sample-feature" class="table table-hove">
  <thead>
    <tr>
      <th>Nr Muestra</th>
      <% cols.length.times do |index| %>
        <th><%= cols[index] %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% rows.to_i.times do |sample| %>
      <tr>
        <td><%= sample + 1 %></td>
        <% cols.length.times do |feature| %>
          <td>
            <div>
              <input 
                type="number"
                step="any"
                class="form-control only-numbers"
                name="sp_value[<%=sample%>-<%=feature%>]"
                required="required"
              >
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>