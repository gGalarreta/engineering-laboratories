 <%= form_for @custody_order, url: custody_check_update_supervisor_custody_order_path, :wrapper => false,  method: :put do |f| %>
  <div id="service" class="tabcontent" style="display: block;">
    <h3>Información</h3>
    <%= render 'show_basic_information', service: service, f: f %>
  </div>
  <div id="custody" class="tabcontent">
    <h3>Revisión</h3>
    <%= render 'custody_information', sample: sample, f: f %>
    <div class="form-group row">
      <div class="col-md-3 col-fom-label">
        <%= f.label :Confirmación %>
      </div>
      <div class="col-md-4">
        <label class="radio form-check-label sical-radio-button">
          <span class="icons">
            <span class="first-icon fa fa-circle-o"></span>
            <span class="second-icon fa fa-dot-circle-o"></span>
          </span>
          <input
            id="accepted"
            type="radio"
            class="form-check-input"
            data-toggle="radio"
            name="custody_order[supervised_validation]"
            value="true"
          >
          Aceptado
        </label>
        <label class="radio form-check-label sical-radio-button">
          <span class="icons">
            <span class="first-icon fa fa-circle-o"></span>
            <span class="second-icon fa fa-dot-circle-o"></span>
          </span>
          <input
            id="rejected"
            type="radio"
            class="form-check-input"
            data-toggle="radio"
            name="custody_order[supervised_validation]"
            value="false"
          >
          No Aceptado
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="text-center save-worker">
        <%= link_to "Cancelar", supervisor_custody_orders_path, class: "btn btn-primary sical-btn-cancel" %>
        <%= f.submit "Asignar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
      </div>
    </div>
  </div>
<% end %>